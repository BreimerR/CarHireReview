<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
          android:id="@+id/card_view_car_model"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Car Model : "
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/card_view_car_model_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          android:layout_marginTop="11dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toRightOf="@+id/card_view_car_model"
          android:text="Kluger"
          android:textSize="17sp" />

      <TextView
          android:id="@+id/card_view_car_registration"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_model"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Registration No. : "
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/card_view_car_registration_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_model_text"
          android:layout_marginLeft="3dp"
          android:layout_marginTop="11dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toRightOf="@+id/card_view_car_registration"
          android:text="KAA 000A"
          android:textSize="17sp" />

      <TextView
          android:id="@+id/card_view_car_cc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_registration"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Car CC : "
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/card_view_car_cc_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_registration_text"
          android:layout_marginLeft="3dp"
          android:layout_marginTop="11dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toRightOf="@+id/card_view_car_cc"
          android:text="1500"
          android:textSize="17sp" />

      <TextView
          android:id="@+id/card_view_car_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_cc"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Price : "
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/card_view_car_price_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/card_view_car_cc_text"
          android:layout_marginLeft="3dp"
          android:layout_marginTop="11dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toRightOf="@+id/card_view_car_price"
          android:text="2000"
          android:textSize="17sp" />

  </RelativeLayout>

</androidx.cardview.widget.CardView>